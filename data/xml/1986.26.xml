  <art nr="8">
    <nr-title>8. gr.</nr-title>
    <subart nr="1">
      <sen>Brot á lögum þessum varða sektum.</sen>
    </subart>
  </art>
  <art nr="9">
    <nr-title>9. gr.</nr-title>
    <subart nr="1">
      <sen>Lög þessi öðlast þegar gildi.</sen>
    </subart>
  </art>
</law>
