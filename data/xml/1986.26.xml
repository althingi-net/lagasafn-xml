  <art nr="8">
    <nr-title>8. gr.</nr-title>
    <subart nr="1">
      <sen nr="1">Brot á lögum þessum varða sektum.</sen>
    </subart>
  </art>
  <art nr="9">
    <nr-title>9. gr.</nr-title>
    <subart nr="1">
      <sen nr="1">Lög þessi öðlast þegar gildi.</sen>
    </subart>
  </art>
