<?xml version="1.0" encoding="utf-8"?>
<law nr="5" year="1991" law-type="speaker-verdict">
  <name>Forsetaúrskurður um fánadaga og fánatíma</name>
  <num-and-date>
    <date>1991-01-23</date>
    <num>5</num>
    <original>1991 nr. 5 23. janúar</original>
  </num-and-date>
  <minister-clause>&lt;small&gt; &lt;b&gt; Tók gildi 13. mars 1991. &lt;/b&gt; &lt;em&gt; Breytt með: &lt;/em&gt; Augl. 141/2008 (tók gildi 18. des. 2008). &lt;br/&gt; &lt;/small&gt;</minister-clause>
  <art nr="1">
    <nr-title>1. gr.</nr-title>
    <subart nr="1">
      <sen nr="1">Draga skal fána á stöng á húsum opinberra stofnana, sem eru í umsjá valdsmanna eða sérstakra forstöðumanna ríkisins, eftirgreinda daga:</sen>
      <numart nr="1" nr-type="numeric">
        <nr-title>1.</nr-title>
        <sen nr="1">Fæðingardag forseta Íslands.</sen>
      </numart>
      <numart nr="2" nr-type="numeric">
        <nr-title>2.</nr-title>
        <sen nr="1">Nýársdag.</sen>
      </numart>
      <numart nr="3" nr-type="numeric">
        <nr-title>3.</nr-title>
        <sen nr="1">Föstudaginn langa.</sen>
      </numart>
      <numart nr="4" nr-type="numeric">
        <nr-title>4.</nr-title>
        <sen nr="1">Páskadag.</sen>
      </numart>
      <numart nr="5" nr-type="numeric">
        <nr-title>5.</nr-title>
        <sen nr="1">Sumardaginn fyrsta.</sen>
      </numart>
      <numart nr="6" nr-type="numeric">
        <nr-title>6.</nr-title>
        <sen nr="1">1. maí.</sen>
      </numart>
      <numart nr="7" nr-type="numeric">
        <nr-title>7.</nr-title>
        <sen nr="1">Hvítasunnudag.</sen>
      </numart>
      <numart nr="8" nr-type="numeric">
        <nr-title>8.</nr-title>
        <sen nr="1">Sjómannadaginn.</sen>
      </numart>
      <numart nr="9" nr-type="numeric">
        <nr-title>9.</nr-title>
        <sen nr="1">17. júní.</sen>
      </numart>
      <numart nr="10" nr-type="numeric">
        <nr-title>10.</nr-title>
        <sen nr="1">1. desember.</sen>
      </numart>
      <numart nr="11" nr-type="numeric">
        <nr-title>11.</nr-title>
        <sen nr="1">Jóladag.</sen>
      </numart>
      <numart nr="12" nr-type="numeric">
        <nr-title>12.</nr-title>
        <sen nr="1">16. nóvember, fæðingardag Jónasar Hallgrímssonar.</sen>
      </numart>
    </subart>
    <subart nr="2">
      <sen nr="1">Alla ofangreinda daga skal draga fána að hún, nema föstudaginn langa, þá í hálfa stöng.</sen>
    </subart>
    <footnotes>
      <footnote nr="1">
        <footnote-sen>Augl. 141/2008.</footnote-sen>
