<law nr="16" year="1973">
  <name>Lög um happdrætti Dvalarheimilis aldraðra sjómanna</name>
  <num-and-date>
    <date>1973-04-13</date>
    <num>16</num>
    <original>1973 nr. 16 13. apríl</original>
