<law nr="14" year="1985" law-type="law">
  <name>Lög um framkvæmd alþjóðasamnings um gáma</name>
  <num-and-date>
    <date>1985-05-10</date>
    <num>14</num>
    <original>1985 nr. 14 10. maí</original>
  </num-and-date>
  <minister-clause>&lt;a href="https://www.althingi.is/thingstorf/thingmalalistar-eftir-thingum/ferill/?ltg=107&amp;amp;mnr=324"&gt; &lt;i&gt; Ferill málsins á Alþingi. &lt;/i&gt; &lt;/a&gt; &lt;a href="https://www.althingi.is/altext/pdf/107/s/0513.pdf"&gt; &lt;i&gt; Frumvarp til laga. &lt;/i&gt; &lt;/a&gt; &lt;br/&gt; &lt;br/&gt; &lt;small&gt; &lt;b&gt; Tóku gildi 31. maí 1985. &lt;/b&gt; &lt;/small&gt;</minister-clause>
  <art nr="1">
    <nr-title>1. gr.</nr-title>
    <subart nr="1">
      <paragraph nr="1">
        <sen nr="1">Ráðherra þeim, sem fer með siglingamál, er heimilt að setja reglur til að framfylgja alþjóðasamningi, sem Ísland er aðili að, um gáma.</sen>
      </paragraph>
    </subart>
    <footnotes>
      <footnote nr="1">
        <footnote-sen>&lt;a href="https://www.reglugerd.is/reglugerdir/allar/nr/624-1997"&gt;Rg. 624/1997&lt;/a&gt;.</footnote-sen>
        <location type="pointer" xpath="art[@nr='1']/subart[@nr='1']/paragraph[@nr='1']/sen[@nr='1']" before-mark="^Ráðherra þeim, sem fer með siglingamál, er heimilt að setja reglur" after-mark="til að framfylgja alþjóðasamningi, sem Ísland er aðili að, um gáma.$"/>
      </footnote>
    </footnotes>
  </art>
  <art nr="2">
    <nr-title>2. gr.</nr-title>
    <subart nr="1">
      <paragraph nr="1">
        <sen nr="1">Brot gegn reglum, sem settar verða samkvæmt lögum þessum, varða sektum.</sen>
      </paragraph>
    </subart>
  </art>
  <art nr="3">
    <nr-title>3. gr.</nr-title>
    <subart nr="1">
      <paragraph nr="1">
        <sen nr="1">Lög þessi öðlast þegar gildi.</sen>
      </paragraph>
    </subart>
  </art>
</law>
