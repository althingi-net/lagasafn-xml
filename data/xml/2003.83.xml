              <nr-title>1</nr-title>
            </start>
            <end>
              <chapter>6</chapter>
              <art>11</art>
              <subart>2</subart>
              <paragraph>1</paragraph>
              <sen>1</sen>
            </end>
          </location>
        </footnote>
      </footnotes>
    </art>
