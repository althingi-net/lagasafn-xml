  <chapter nr="5" nr-type="roman" roman-nr="V">
    <nr-title>V. kafli.</nr-title>
    <name>Langtímaeftirfylgd.</name>
    <footnotes>
      <footnote href="https://www.althingi.is/altext/stjt/2021.085.html" law-nr="85" law-year="2021" law-art="9" nr="1">
