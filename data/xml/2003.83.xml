  <chapter nr="6" nr-type="roman" roman-nr="VI">
    <nr-title>VI. kafli.</nr-title>
    <name>Samþætting og samstarf.</name>
    <footnotes>
      <footnote href="https://www.althingi.is/altext/stjt/2021.085.html" law-nr="85" law-year="2021" law-art="10" nr="1">
