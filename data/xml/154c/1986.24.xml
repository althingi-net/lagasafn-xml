            <end xpath="chapter[@nr='1' and @chapter-type='kafli']/art[@nr='4']/subart[@nr='3']/paragraph[@nr='1']/sen[@nr='1']"/>
          </location>
        </footnote>
      </footnotes>
    </art>
  </chapter>
