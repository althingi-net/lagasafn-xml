            <end xpath="chapter[@nr='2' and @chapter-type='kafli']/art[@nr='7']/subart[@nr='1']/paragraph[@nr='1']/sen[@nr='4']"/>
          </location>
        </footnote>
      </footnotes>
    </art>
    <art nr="8">
      <nr-title>8. gr.</nr-title>
      <name>Tekjur Markáætlunar á sviði vísinda, tækni og nýsköpunar.</name>
      <subart nr="1">
        <paragraph nr="1">
          <sen nr="1">Tekjur Markáætlunar á sviði vísinda, tækni og nýsköpunar eru:</sen>
          <numart nr="1" nr-type="numeric">
            <nr-title>1.</nr-title>
            <paragraph nr="1">
              <sen nr="1">Fjárveiting í fjárlögum ár hvert.</sen>
            </paragraph>
          </numart>
          <numart nr="2" nr-type="numeric">
            <nr-title>2.</nr-title>
            <paragraph nr="1">
              <sen nr="1">Önnur framlög.</sen>
            </paragraph>
          </numart>
        </paragraph>
      </subart>
      <footnotes>
